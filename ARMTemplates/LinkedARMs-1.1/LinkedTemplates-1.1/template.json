{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "resourceGroupID": {
            "type": "string"
        },

        "PubIP_name": {
            "type": "string"
        },
        "PubIP_sku": {
            "type": "string",
            "allowedValues": [
                "Basic",
                "Standard"
            ]
        },
        "PubIP_publicIPAllocationMethod": {
            "type": "string",
            "allowedValues": [
                "Dynamic",
                "Static"
            ]
        },
        "PubIP_idleTimeoutInMinutes": {
            "type": "int"
        },
        "PubIP_domainNameLabel": {
            "type": "string"
        },
        "PubIP_publicIpAddressVersion": {
            "type": "string"
        },
        
        "NIC_Identity": {
            "type": "string"
        },
        "NIC_addressPrefix": {
            "type": "string"
        },
        "NIC_subnetName": {
            "type": "string"
        },
        "NIC_subnetAddressPrefix": {
            "type": "string"
        },
        "NIC_enableDdosProtection": {
            "type": "bool"
        },
        "NSG_Name": {
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2018-08-01",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[parameters('PubIP_name')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('PubIP_sku')]"
            },
            "properties": {
                "publicIPAllocationMethod": "[parameters('PubIP_publicIPAllocationMethod')]",
                "idleTimeoutInMinutes": "[parameters('PubIP_idleTimeoutInMinutes')]",
                "publicIpAddressVersion": "[parameters('PubIP_publicIpAddressVersion')]",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('PubIP_domainNameLabel')]"
                }
            }
        },
        {
            "comments": "Network Resource",
            "apiVersion": "2018-08-01",
            "name": "[parameters('NIC_Identity')]",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('NIC_addressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('NIC_subnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('NIC_subnetAddressPrefix')]"
                        }
                    }
                ],
                "enableDdosProtection": "[parameters('NIC_enableDdosProtection')]"
            }
        },
        {
            "apiVersion": "2019-02-01",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[parameters('NSG_Name')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[parameters('NIC_Identity')]"
              ],
            "properties": {
                "securityRules": [
                    {
                      "name": "winrm_rule",
                      "properties": {
                        "description": "Allows WinRM on 5985",
                        "protocol": "Tcp",
                        "sourcePortRanges": [
                            "5385-5386"
                          ],
                          "destinationPortRanges": [
                            "5385-5386"
                          ],
                        "sourceAddressPrefix": "*",
                        "destinationAddressPrefix": "*",
                        "access": "Allow",
                        "priority": 101,
                        "direction": "Inbound"
                      }
                    }
                ]
            }
        }
    ]
}