
{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
              "description": "Location for all resources."
            }
          },
          "NIC_Identity": {
            "type": "string",
            "metadata": {
              "description": "NIC Name"
            }
          }, 
          "NIC_addressPrefix": {
            "type": "string",
            "metadata": {
              "description": "NIC Address Prefix"
            }
          },  
          "NIC_subnetName": {
            "type": "string",
            "metadata": {
              "description": "NIC subnetname"
            }
          },  
          "NIC_subnetAddressPrefix": {
            "type": "string",
            "metadata": {
              "description": "NIC Subnet prefix"
            }
          }, 
          "NIC_enableDdosProtection": {
            "type": "bool",
            "metadata": {
              "description": "NIC enableDdos protections"
            }
          }
    },    
    
    "resources": [
        {
            "comments": "NetworkInterface",
            "apiVersion": "2018-08-01",
            "name": "[parameters('NIC_Identity')]",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace"              : "[parameters('NIC_addressPrefix')]",
                "enableDdosProtection"      : "[parameters('NIC_enableDdosProtection')]",                
                "subnets": [
                    {
                        "name"              : "[parameters('NIC_subnetName')]",
                        "properties": {
                            "addressPrefix" : "[parameters('NIC_subnetAddressPrefix')]"
                        }
                    }
                ]
                
            }
        }        
    ],
    "outputs": {}
}