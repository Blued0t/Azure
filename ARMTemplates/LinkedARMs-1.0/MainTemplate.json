{
    "variables": {
        "templatelink": "https://github.com/Blued0t/Azure/blob/master/ARMTemplates/LinkedARMs-1.0/LinkedTemplates/pubIpAddress.json",
        "location"              : "uksouth",
        "PublicIPName"          : "PubIP_1",
        "PublicIPSKU"           : "Basic",
        "PublicIPAllocation"    : "Dynamic",
        "PublicIPidleTimeout"   : "15",
        "PublicIPdomainLabel"   : "bluedot-arm",
        "PublicIpAddressVersion": "IPv4"
    },
    "resources": [
        {
            "apiVersion": "2015-01-01",
            "name": "nestedTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[variables('templatelink')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location"                      : "[variables('location')]",
                    "PubIP_name"                    : "[variables('PublicIPName')]",
                    "PubIP_sku"                     : "[variables('PublicIPSKU')]",
                    "PubIP_publicIPAllocationMethod": "[variables('PublicIPAllocation')]",
                    "PubIP_idleTimeoutInMinutes"    : "[variables('PublicIPidleTimeout')]",
                    "PubIP_domainNameLabel"         : "[variables('PublicIPdomainLabel')]",
                    "PubIP_publicIpAddressVersion"  : "[variables('PublicIpAddressVersion')]"
                }
            }
        }
    ]
}
