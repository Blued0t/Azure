
{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
              "description": "Location for all resources."
            }
          },
          "NIC_Name": {
            "type": "string",
            "metadata": {
              "description": "Network Interface Name"
            }
          },
          "PubIP_name": {
            "type": "string",
            "metadata": {
              "description": "Public IP Name"
            }
          },          
        "PubIP_sku": {
            "type": "string",
            "metadata": {
              "description": "Public SKU"
            }
          },  
        "PubIP_publicIPAllocationMethod": {
            "type": "string",
            "metadata": {
              "description": "Public IP Allocation Method"
            }
          },
        "PubIP_idleTimeoutInMinutes": {
            "type": "int",
            "metadata": {
              "description": "Public IP idle timeout"
            }
          },
        "PubIP_domainNameLabel": {
            "type": "string",
            "metadata": {
              "description": "Public IP domain name label"
            }
          },
        "PubIP_publicIpAddressVersion": {
            "type": "string",
            "metadata": {
              "description": "Public IP address version"
            }
          }
    },
    "variables": {
      "location"                  : "uksouth",
      "PublicIPName"              : "PubIP",
      "PublicIPSKU"               : "Basic",
      "PublicIPAllocation"        : "Dynamic",
      "PublicIPidleTimeout"       :  15,
      "PublicIPdomainLabel"       : "blued0t-ip",
      "PublicIpAddressVersion"    : "IPv4"
    },

    
    "resources": [
      {
        "comments"  : "NetworkInterface",
        "type"      : "Microsoft.Network/networkInterfaces",
        "apiVersion": "2017-06-01",
        "name"      : "[parameters('NIC_Name')]",
        "location"  : "[parameters('location')]",

      "properties": {
        "ipConfigurations": [
          {
            "name"                        :  "[parameters('NIC_Name')]",
            "properties": {
              "privateIPAllocationMethod" : "Dynamic",
              "publicIPAddress": {
                "id"                      : "[resourceId('Microsoft.Network/publicIPAddresses','PubIP')]"
              },
              "subnet": {
                "id"                      : "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'InternalNetwork', 'default')]"
              }
              }
            }
          
        ]
      },
      "dependsOn": [
        "publicIpTemplate"      
    ]
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "publicIpTemplate",
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(deployment().properties.templateLink.uri, 'pubIpAddress.json')]",
              "contentVersion": "1.0.0.0"
          },
          "parameters":{
              "PubIP_name"                    :{"value":"[variables('PublicIPName')]"},
              "PubIP_sku"                     :{"value":"[variables('PublicIPSKU')]"},
              "PubIP_publicIPAllocationMethod":{"value":"[variables('PublicIPAllocation')]"},
              "PubIP_idleTimeoutInMinutes"    :{"value":"[variables('PublicIPidleTimeout')]"},
              "PubIP_domainNameLabel"         :{"value":"[variables('PublicIPdomainLabel')]"},
              "PubIP_publicIpAddressVersion"  :{"value":"[variables('PublicIpAddressVersion')]"}
          }
      }
  }        
    ],    
    "outputs": {
      "messageFromLinkedTemplate": {
          "type": "string",
          "value": "[reference('CreatePublicIP').outputs.referenceOutput.value]"
      }
  }
}